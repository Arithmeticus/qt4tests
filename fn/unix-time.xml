<test-set xmlns="http://www.w3.org/2010/09/qt-fots-catalog" name="fn-unix-time" covers-40="PR1358">
  <description>Tests for the fn:unix-time function</description>
  <link type="spec" document="http://www.w3.org/TR/xpath-functions-30/" idref="func-unix-time"/>
  <dependency type="spec" value="XP40+ XQ40+"/>
  <test-case name="unix-time-001">
    <description>No argument</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time()</test>
    <result>
      <assert-eq>xs:dateTime('1970-01-01T00:00:00Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-002">
    <description>Empty sequence</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(())</test>
    <result>
      <assert-eq>xs:dateTime('1970-01-01T00:00:00Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-003">
    <description>UNIX time 0</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(0)</test>
    <result>
      <assert-eq>xs:dateTime('1970-01-01T00:00:00Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-004">
    <description>UNIX time 1</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(1)</test>
    <result>
      <assert-eq>xs:dateTime('1970-01-01T00:00:00.001Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-005">
    <description>UNIX time, one day</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(86400 * 1000)</test>
    <result>
      <assert-eq>xs:dateTime('1970-01-02T00:00:00Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-006">
    <description>UNIX time, check limit</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(0x7FFFFFFF)</test>
    <result>
      <assert-eq>xs:dateTime('1970-01-25T20:31:23.647Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-007">
    <description>UNIX time, check limit</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(0xFFFFFFFF)</test>
    <result>
      <assert-eq>xs:dateTime('1970-02-19T17:02:47.295Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-008">
    <description>UNIX time, check limit</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(0x7FFFFFFF * 1000)</test>
    <result>
      <assert-eq>xs:dateTime('2038-01-19T03:14:07Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-009">
    <description>UNIX time, check limit</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(0xFFFFFFFF * 1000)</test>
    <result>
      <assert-eq>xs:dateTime('2106-02-07T06:28:15Z')</assert-eq>
    </result>
  </test-case>
  <test-case name="unix-time-010">
    <description>UNIX time, check limit</description>
    <created by="Christian Gruen" on="2024-09-04"/>
    <test>unix-time(0x7FFFFFFFFFFFFFFF)</test>
    <result>
      <assert-eq>xs:dateTime('292278994-08-17T07:12:55.807Z')</assert-eq>
    </result>
  </test-case>
</test-set>
