    <dependency type="spec" value="XQ40+"/>      
    <test><![CDATA[
      <out>{
        for $group in
           partition(
                <doc><h1>Intro</h1><p>blah</p><p>blah2</p><h1>Outtro</h1><p>blath</p><p>blath2</p></doc>/*, 
