<?xml version="1.0" encoding="UTF-8"?>
<test-set xmlns="http://www.w3.org/2010/09/qt-fots-catalog" name="array-truncate"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" covers="array-truncate">
    <description>Tests for the array:truncate functions introduced in XPath 4.0</description>
    <link type="spec" document="http://www.w3.org/TR/xpath-functions-31/" idref="func-array-truncate"/>
    <dependency type="spec" value="XP40+ XQ40+"/>



    <test-case name="array-truncate-701">
        <description>Return truncate of array with integer members</description>
        <created by="Michael Kay" on="2022-11-16"/>
        <environment ref="array"/>
        <test>array:truncate([5,6,7,8])</test>
        <result>
            <all-of>
                <assert-type>array(*)</assert-type>
                <assert>array:size($result) eq 3</assert>
                <assert-deep-eq>[5,6,7]</assert-deep-eq>
            </all-of>
        </result>
    </test-case>
    <test-case name="array-truncate-702">
        <description>Return truncate of array with array members</description>
        <created by="Michael Kay" on="2022-11-16"/>
        <environment ref="array"/>
        <test>array:truncate([["a", "b"], ["c", "d"]])</test>
        <result>
            <all-of>
                <assert-type>array(*)</assert-type>
                <assert>array:size($result) eq 1</assert>
                <assert-deep-eq>[["a", "b"]]</assert-deep-eq>
            </all-of>
        </result>
    </test-case>
    <test-case name="array-truncate-703">
        <description>Return truncate of array with single member</description>
        <created by="Michael Kay" on="2022-11-16"/>
        <environment ref="array"/>
        <test>array:truncate([5])</test>
        <result>
            <all-of>
                <assert-type>array(*)</assert-type>
                <assert>array:size($result) eq 0</assert>
                <assert-deep-eq>[]</assert-deep-eq>
            </all-of>
        </result>
    </test-case>
    <test-case name="array-truncate-704">
        <description>Return truncate of array - error</description>
        <created by="Michael Kay" on="2022-11-16"/>
        <environment ref="array"/>
        <test>array:truncate([])</test>
        <result>
            <error code="FOAY0001"/>
        </result>
    </test-case>

    <test-case name="array-truncate-705">
        <description>Return truncate of array with single member that is empty</description>
        <created by="Michael Kay" on="2022-11-16"/>
        <environment ref="array"/>
        <test>array:truncate([()])</test>
        <result>
            <all-of>
                <assert-type>array(*)</assert-type>
                <assert>array:size($result) eq 0</assert>
                <assert-deep-eq>[]</assert-deep-eq>
            </all-of>
        </result>
    </test-case>

    <test-case name="array-truncate-706">
        <description>Return truncate of array with nested arrays in the first argument.</description>
        <created by="Michael Kay" on="2022-11-16"/>
        <dependency type="spec" value="XQ31+"/>
        <environment ref="array"/>
        <test><![CDATA[
          array:truncate([
        	[1,[[2]]],
        	<e/>,
            (<f/>,<g/>)
          ])
        ]]></test>
        <result>
            <all-of>
                <assert-type>array(*)</assert-type>
                <assert>array:size($result) eq 2</assert>
            </all-of>
        </result>
    </test-case>

</test-set>
